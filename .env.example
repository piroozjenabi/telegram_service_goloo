# Django Settings
DJANGO_SECRET_KEY=your-secret-key-here
DJANGO_DEBUG=1
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1

# Base URL for webhook setup (must be HTTPS in production)
BASE_URL=https://your-domain.com

# Database (PostgreSQL for Docker, SQLite for local development)
# For Docker: uncomment the line below
# DATABASE_URL=postgresql://postgres:postgres@db:5432/telegram_bots
# For local development: leave commented to use SQLite

# Telegram Bot Settings (optional defaults)
# TELEGRAM_API_TIMEOUT=30
# TELEGRAM_CONNECT_TIMEOUT=10

# Production Settings
# USE_HTTPS=1
# SECURE_SSL_REDIRECT=1
